{
  "name": "bt-internship-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev:api": "nest start --verbose --configuration=d",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "npm run db:test:up",
    "test:e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json --verbose",
    "posttest:e2e": "npm run db:test:rm",
    "pretest:e2e:husky": "npm run db:test:up",
    "test:e2e:husky": "dotenv -e .env.test -- jest --no-cache --config ./test/jest-e2e.json --verbose",
    "posttest:e2e:husky": "npm run db:test:rm",
    "prepare": "husky install",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy --schema=prisma/",
    "db:test:up": "docker compose up postgres-test -d",
    "db:test:rm": "docker compose down postgres-test -v",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && sleep 5 && npm run prisma:test:deploy",
    "db:test:studio": "dotenv -e .env.test -- prisma studio",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "db:migrate": "prisma migrate deploy --schema=prisma/",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "start:migrate:prod": "prisma migrate deploy --schema=prisma/ && npm run start:prod",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
    "db:migrate:generate": "npm run db:migrate:generate:name --",
    "db:migrate:generate:name": "prisma migrate dev --schema=prisma/ && npm run pretty"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.1.1",
    "@prisma/client": "^6.10.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv-cli": "^8.0.0",
    "firebase-admin": "^13.3.0",
    "openai": "^5.10.1",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vegardit/prisma-generator-nestjs-dto": "^1.3.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prisma": "^6.10.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,js,json}": "eslint --fix"
  }
}
